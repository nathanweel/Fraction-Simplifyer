public class Calculator {
    public static void main(String args[]) {
        
      //change number
      double x = 10;
      
      //change number
      double y = 25;
      
      //change for different operation (add, sub, mult, div)
      String op = "div";
      
      //the primitive "x" always comes before "y"
      
      if (op.equals("add")){
          System.out.println(x + y);
          
      }else if (op.equals("sub")){
          System.out.println(x - y);
          
      }else if (op.equals("mult")){
          System.out.println(x * y);
          
      }else if (op.equals("div")){
          System.out.println(x / y);
      }
      
            //small ratios thing
      if (op.equals("ratios")){
          System.out.println( x + " : " + y + ", " + x + " to " + y);
          
      }else {
          System.out.println("Variable 'op' does not equal 'ratios'");
      }
    }
}
